@using System.Security.Claims;

<div id="emailForgotSendedModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="emailForgotSendedModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emailForgotSendedModalLabel">Відновлення паролю</h5>
            </div>
            <div class="modal-body">
                На вашу пошту надіслано лист з посиланням для відновлення доступу
            </div>
            <div class="modal-footer">
                <button id="OKButton" type="button" class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#emailForgotSendedModal').modal('show');
    });

    $('#OKButton').click(function () {
        window.location.href = '/';
    });
</script>