@{
    ViewData["Title"] = "Forgot";
}

@using System.Security.Claims;

@model ForgotModel

<div class="text-center">
    <div class="form-container">
        <h2>Відновлення паролю</h2>
        <form asp-action="Index" method="post">
            <div style="margin-bottom: 10px;">
                <input asp-for="EmailLogin" placeholder="email / login" class="form-input">
                <span asp-validation-for="EmailLogin" class="form-error"></span>
                <br></br>
                <h6>Введіть пошту або логін вашого аккаунту.<br>На прив'язану пошту прийде лист з посиланням для відновлення паролю</h6>
            </div>
            <br>
            <div style="margin-bottom: 10px;">
                <input type="submit" value="Надіслати" class="form-submit">
            </div>
        </form>
    </div>
</div>
