@{
    ViewData["Title"] = "Sign Up";
}

@model RegistrationModel

<div class="text-center">
    <div class="form-container">
        <h2>Реєстрація</h2>
        <form asp-action="Index" method="post">
            <div style="margin-bottom: 10px;">
                <input asp-for="Email" placeholder="email" class="form-input">
                <span asp-validation-for="Email" class="form-error"></span>
            </div>
            <div style="margin-bottom: 10px;">
                <input asp-for="Login" placeholder="login" class="form-input">
                <span asp-validation-for="Login" class="form-error"></span>
            </div>
            <div style="margin-bottom: 10px;">
                <input asp-for="Password" placeholder="password" class="form-input">
                <span asp-validation-for="Password" class="form-error"></span>
                <input asp-for="ConfirmPassword" placeholder="confirm password" class="form-input">
                <span asp-validation-for="ConfirmPassword" class="form-error"></span>
            </div>
            <div style="margin-bottom: 10px;">
                <input asp-for="FirstName" placeholder="name" class="form-input">
                <input asp-for="LastName" placeholder="surname" class="form-input">
                <span asp-validation-for="LastName" class="form-error"></span>
            </div>
            <br>
            <div style="margin-bottom: 10px;">
                <input type="submit" value="Зареєструватись" class="form-submit">
            </div>
            <br>
            <div style="margin-bottom: 10px;">
                <a href="~/login" style="color:cadetblue">Увійти в існуючий акаунт</a>
            </div>
        </form>
        <hr>
        <h4>Зареєструйтесь з:</h4>
        <div>
            <a href="/GoogleOAuth" style="text-decoration: none; color: goldenrod; margin-right: 10px;">Google</a>
        </div>
    </div>
</div>
