@{
    ViewData["Title"] = "Recovery";
}

@model RecoveryModel

<div class="text-center">
    <div class="form-container">
        <h2>Відновлення</h2>
        <form asp-action="Index" method="post">
            <div style="margin-bottom: 10px;">
                <input asp-for="Password" placeholder="new password" class="form-input">
                <span asp-validation-for="Password" class="form-error"></span>
                <input asp-for="ConfirmPassword" placeholder="confirm new password" class="form-input">
                <span asp-validation-for="ConfirmPassword" class="form-error"></span>
            </div>
            <br>
            <div style="margin-bottom: 10px;">
                <input type="submit" value="Підтвердити" class="form-submit">
            </div>
        </form>
    </div>
</div>
