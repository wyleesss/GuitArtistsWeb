@model LessonViewModel

@{
    ViewData["Title"] = $"Уроки > #{Model.SectionName} > {Model.Name}";
}

<div class="user-page-center-wrapper" style="height: 80px">
    <div class="article-user-info">
        <a class="article-card-text"><b>@Model.SectionName</b></a>
        <a class="article-card-text"><b>x</b></a>
        <a class="article-card-text"><b><q><em>@Model.Name</em></q></b></a>
    </div>
</div>

@if (Model.ImagePath == "/")
{
    <div>
        <a class="article-card-text"><b>опис:</b><br> @Model.Appendix</a>
    </div>

    <div class="text-center">
        <hr>
        <div class="article-card-text">
            @Html.Raw(Model.Body)
        </div>
    </div>
    <hr>
}
else
{
    <div>
        <a class="article-card-text"><b>опис:</b><br> @Model.Appendix</a>
    </div>
    <div class="image-container">
        <img style="object-fit: contain; width: 100%; height: 100%;" src="@Model.ImagePath" alt="image"></img>
    </div>

    <div class="text-center" style="margin-top: 310px;">
        <hr>
        <div class="article-card-text">
            @Html.Raw(Model.Body)
        </div>
    </div>
    <hr>
}

@if (Model.Video != null)
{
    <div class="video-container" style="background-color: #2e2e2e; width: 80%; margin: auto; margin-top: 20px;">
        <a href=@Model.Video class="button" style="color: white; border: 2px solid white;">Переглянути відео</a>
    </div>
}