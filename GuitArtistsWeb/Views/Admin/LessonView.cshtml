@model LessonViewModel

@{
    ViewData["Title"] = $"Уроки > #{Model.SectionName} > {Model.Name}";
}

<div class="user-page-center-wrapper" style="height: 80px">
    <div class="article-user-info">
        <a style="color: white; margin-left: 30px"><b>@Model.SectionName</b></a>
        <a style="margin: 10px; color: gray; font-size: 25px; user-select: none;"><b>x</b></a>
        <a style="font-size: 25px"><b><q><em>@Model.Name</em></q></b></a>
    </div>
</div>

@if (Model.ImagePath == "/")
{
    <div class="text-center">
        <div class="description-container" style="margin-right: 350px">
            <a style="font-size: 20px"><b>опис:</b><br> @Model.Appendix</a>
        </div>
    </div>
}
else
{
    <div class="description-container">
        <a style="font-size: 20px"><b>опис:</b><br> @Model.Appendix</a>
    </div>
    <div class="image-container">
        <img style="object-fit: contain; width: 100%; height: 100%;" src="@Model.ImagePath" alt="image"></img>
    </div>
}

<div style="margin-top: 310px;">
    <hr>
    <div style="font-size: 27px; padding: 20px; margin-left: 100px; margin-right: 200px; color: white">
        @Html.Raw(Model.Body)
    </div>
</div>

<hr>

@if (Model.Video != null)
{
    <div class="video-container" style="background-color: #2e2e2e; width: 80%; margin: auto; margin-top: 20px;">
        <a href=@Model.Video class="button" style="color: white; border: 2px solid white;">Переглянути відео</a>
    </div>
}